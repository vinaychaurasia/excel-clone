<!DOCTYPE html>
<html>
    <head>
        <title>excel-clone</title>
        <link rel = "stylesheet" type = "text/css" href = "./index.css" />
    </head>
    <body>
        <div id="container">
            <div id="menu-bar">
                <div id="file-menu" data-content="file-menu-container">File</div>
                <div id="home-menu" data-content="home-menu-container">Home</div>
                <div id="data-menu" data-content="data-menu-container">Data</div>
            </div>
            <div id="menu-content-container">
                <div class="menu-container" id="file-menu-container">
                    <div id="new">New</div>
                    <div id="open">Open</div>
                    <div id="save">Save</div>
                </div>
                <div class="menu-container" id="home-menu-container">
                    <div class="menu-group" id="font-menu-container">
                        <div class="menu-row">
                            <select id="font-family">
                                <option value="Georgia">Georgia</option>
                                <option value="Fantasy">Fantasy</option>
                                <option value="Comic">Comic</option>
                                <option value="Calibri">Calibri</option>
                                <option value="Tahoma">Tahoma</option>
                            </select>
                            <select id="font-size">
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="14">14</option>
                                <option value="16">16</option>
                            </select>
                        </div>
                        <div class="menu-row">
                            <input id="bold" type="button" value="B">
                            <input id="italic" type="button" value="I">
                            <input id="underline" type="button" value="U">
                            <input id="bg-color" type="color" value="#FFFFFF">
                            <input id="text-color" type="color" value="#000000">
                        </div>
                    </div>
                    <div class="menu-group" id="alignment-menu-container">
                        <div class="menu-row">
                            <input id="top-align" type="button" prop-val="top" class="valign" value="T">
                            <input id="middle-align" type="button" prop-val="middle" class="valign" value="M">
                            <input id="bottom-align" type="button" prop-val="bottom" class="valign" value="B">
                        </div>
                        <div class="menu-row">
                            <input id="left-align" type="button" prop-val="left" class="halign" value="L">
                            <input id="center-align" type="button" prop-val="center" class="halign" value="C">
                            <input id="right-align" type="button" prop-val="right" class="halign" value="R">
                        </div>
                    </div>
                </div>
                <div class="menu-container" id="data-menu-container">data</div>
            </div>
            <div id="formula-bar">
                <input type = "text" id="cell" />
                <div id="separator"> fx </div>
                <input type="text" id="formula"/>
            </div>
            <div id="content-container">
                <div id="tl-cell"></div> 
                <div id="first-row">
                    <% for(let j = 0; j < cols; j++){ %>
                        <div class="cell"><%= String.fromCharCode('A'.charCodeAt(0) + j) %></div>
                    <% } %>
                </div>
                <div id="first-col">
                    <% for(let i = 0; i < rows; i++){ %>
                        <div class="cell"><%= i+1%></div>
                    <% } %>
                </div>
                <div id="grid">
                    <% for(let i = 0; i < rows; i++){ %>
                        <div class="row">
                            <% for(let j = 0; j < cols; j++){ %>
                                <div class="cell" contenteditable="true" rid="<%=i%>" cid="<%=j%>"></div>
                            <% } %> 
                        </div>
                    <% } %>
                </div>
            </div>
            <div id="sheets-bar">
                <div id="sheets">sheets 1</div>
                <div id="add">+</div>
            </div>
        </div>
        <script src="./index.js"></script>
    </body>
</html>